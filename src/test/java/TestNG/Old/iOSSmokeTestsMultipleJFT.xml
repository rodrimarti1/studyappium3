<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="iOS Smoke Test JFT" configfailurepolicy="continue" verbose="1" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="LDSToolsAppium.RetryListener"/>
        <listener class-name= "LDSToolsAppium.CustomReporter" />
        <listener class-name="LDSToolsAppium.TestListener" />
    </listeners>

    <test name="iOS Smoke Test JFT 1" thread-count="1" parallel="false" >
        <parameter name="os" value="ios" />
        <parameter name="fileName" value="LDSTools.ipa" />
        <parameter name="testDevice" value="REAL-Ziphone8plus" />
        <parameter name="startSleepTime" value="0200" />
        <parameter name="systemPort" value="8251" />

        <groups>
            <run>
                <include name="jft"/>
            </run>
        </groups>

        <classes>
            <class name="LDSToolsAppium.BaseDriver" />
            <class name="LDSToolsAppiumTest.DirectoryScreenTest" />
        </classes>
    </test>

    <test name="iOS Smoke Test JFT 2" thread-count="1" parallel="false" >
        <parameter name="os" value="ios" />
        <parameter name="fileName" value="LDSTools.ipa" />
        <parameter name="testDevice" value="REAL-ZiphoneX" />
        <parameter name="startSleepTime" value="60000" />
        <parameter name="systemPort" value="8202" />

        <groups>
            <run>
                <include name="jft"/>
            </run>
        </groups>

        <classes>
            <class name="LDSToolsAppium.BaseDriver" />
            <class name="LDSToolsAppiumTest.DirectoryScreenTest" />
        </classes>
    </test>
</suite>